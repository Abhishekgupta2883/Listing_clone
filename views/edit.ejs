<% layout('/layouts/boilerplate') -%>
<body>
    
    <div class="col-8 offset-2 mt-3">
    <form action="/listing/<%= data._id%>?_method=PUT" method="post" novalidate class=" needs-validation" enctype="multipart/form-data">
        <h2>Edit your listing</h2>

        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="listing[title]" value="<%=data.title%>"class='form-control' required>
            <div class="valid-feedback">
               Looks good!
             </div>
        </div>

        <div class="mb-3">
            <label for="Description" class="form-label">Description</label>
            <textarea name="listing[description]" id="" class='form-control' required><%= data.description %></textarea>
            <div class="invalid-feedback">
               Enter the short para
             </div>
         </div>
         <div class="mb-3">
          <img src="<%=original %>" alt="" >
         </div>
        
         <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input type="file" name="listing[image]"  class='form-control' >
         </div>
       
              

         <div class="mb-3">
            <label for="Price" class="form-label">Price</label>
            <input type="text" name="listing[price]" value="<%=data.price%>" class='form-control' required>
            <div class="valid-feedback">
               fair price
             </div>
         </div> 
       
         <div class="mb-3">
            <label for="Country" class="form-label">Country</label>
            <input type="text" name="listing[location]" value="<%= data.location %>"class='form-control'  required>
            <div class="invalid-feedback">
               Please provide a valid country.
             </div>
         </div>
       
         <div>
            <label for="Location" class="form-label">Location</label>
            <input type="text" name="listing[country]" value="<%= data.country %>" class='form-control' required> 
            <div class="invalid-feedback">
               Please provide a valid location.
             </div>
         </div>
        <br>
        <button type="submit" class="btn btn-dar add-btn">Edit</button>
        <br>
        <br>
    </form> 
</div>
</body>
